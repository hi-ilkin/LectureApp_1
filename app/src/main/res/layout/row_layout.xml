<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_location_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgbtn_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imgbtn_location"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toLeftOf="@+id/imgbtn_location"
        android:layout_toStartOf="@+id/imgbtn_location"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/imgbtn_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="18dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageButton
        android:id="@+id/imgbtn_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:layout_alignTop="@+id/imgbtn_mail"
        android:layout_toLeftOf="@+id/imgbtn_mail"
        android:layout_toStartOf="@+id/imgbtn_mail"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <ImageButton
        android:id="@+id/imgbtn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgbtn_phone"
        android:layout_toLeftOf="@+id/imgbtn_phone"
        android:layout_toStartOf="@+id/imgbtn_phone"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

</RelativeLayout>